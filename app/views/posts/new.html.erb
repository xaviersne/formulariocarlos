<div style="margin: auto; width:400px">
    <h1>Formulario DesafioLatam</h1>
    <form method="post" action="">
    </form>

    <%= form_with(model: Post, local: true, html: { id: 'create_posts'}) do |form| %>
        
        <div class="form-group">
            <%= form.label :tittle%> 
            <%= form.text_field :tittle, required: true, :class => 'form-control'%>
        </div>

        <div class="form-group">
            <%= form.label :image_url%>
            <%= form.text_field :image_url, required: true, :class => 'form-control'%>

        </div>

        <div class="form-group">
            <%= form.label :content%>
            <%= form.text_area :content, required: true, :class => 'form-control'%>
        </div>


        <%= form.submit "Guardar", :class=> "btn btn-primary" %>


    <% end %>
</div>