<h1>Listado de Posts</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Titulo</th>
            <th scope="col">Fecha de Ingreso</th>
            <th scope="col">Imagen</th>
            <th scope="col">Contenido</th>
        </tr>
    </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td scope="row"><%= post.tittle %></td>
                <td scope="row"><%= post.created_at.strftime("%d/%m/%Y") %></td>
                <td scope="row"><%= image_tag(post.image_url, style: 'width: 100px') %></td>
                <td scope="row"><%= post.content %></td>
            </tr>
        <% end %>
        </tbody>

</table>

